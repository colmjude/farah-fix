    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "application.wsgi:app",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
          "name": "Debug Custom Command",
          "type": "python",
          "request": "launch",
          "module": "flask",
          "args": ["data", "init"],
          "env": {
              "FLASK_APP": "application.wsgi:app",
              "FLASK_DEBUG": "1"
          },
          "console": "integratedTerminal",
          "stopOnEntry": false
        },
        {
          "name": "Debug insert command",
          "type": "python",
          "request": "launch",
          "module": "flask",
          "args": ["product", "insert"],
          "env": {
              "FLASK_APP": "application.wsgi:app",
              "FLASK_DEBUG": "1"
          },
          "console": "integratedTerminal",
          "stopOnEntry": false
        }
    ]
}
